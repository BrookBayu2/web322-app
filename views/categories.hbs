<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        <hr />
        {{#if categories.length}}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th>Image</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                            <tr>
                                <td><a href="/shop?category={{this.id}}">{{this.id}}</a></td>
                                <td><a href="/shop?category={{this.id}}">{{this.name}}</a></td>
                                <td>
                                    {{#if this.image}}
                                        <img src="{{this.image}}" alt="{{this.name}}" class="category-image">
                                    {{else}}
                                        No Image
                                    {{/if}}
                                </td>
                                <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <div class="text-center">
                <strong>{{message}}</strong>
            </div>
        {{/if}}
    </div>
</div>
